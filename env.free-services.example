# =============================================================================
# FREE SERVICES ENVIRONMENT CONFIGURATION
# Dental Store Sudan - All Free Alternatives Configuration
# =============================================================================

# =============================================================================
# NOTIFICATION SERVICE - FREE ALTERNATIVES
# =============================================================================

# Gmail SMTP (FREE - 500 emails/day)
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password
FROM_EMAIL=noreply@dentalstore.sd
FROM_NAME=Dental Store Sudan

# Twilio Trial/Sandbox (FREE - $15 credit + sandbox)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+1234567890

# Alternative: Manual messaging mode (FREE)
WHATSAPP_MANUAL_MODE=false
SMS_MANUAL_MODE=false
EMAIL_TO_SMS_ENABLED=false

# Development/Testing modes
EMAIL_MOCK_MODE=false
WHATSAPP_MOCK_MODE=false
SMS_MOCK_MODE=false

# =============================================================================
# EXTERNAL INTEGRATIONS - FREE ALTERNATIVES
# =============================================================================

# Google Drive API (FREE - 15GB storage)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}
# OR OAuth2 (alternative)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token

GOOGLE_DRIVE_ROOT_FOLDER_ID=your-root-folder-id
GOOGLE_DRIVE_MAKE_PUBLIC=false
GOOGLE_DRIVE_MOCK_MODE=false

# PDF Generation (FREE - PDFKit open source)
PDF_TEMP_DIR=./temp/pdfs

# =============================================================================
# REPORTING & ANALYTICS - FREE ALTERNATIVES
# =============================================================================

# Supabase Database for Analytics (FREE tier)
# Note: Use same database as main services
DATABASE_URL=postgresql://username:password@localhost:5432/dental_store

# Chart.js/Recharts/Plotly (FREE - open source)
CHARTS_DEFAULT_LIBRARY=chartjs
CHARTS_CACHE_TTL=300

# =============================================================================
# FILE STORAGE - FREE ALTERNATIVE (SUPABASE)
# =============================================================================

# Supabase Storage (FREE - 1GB storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:5000
PRODUCT_SERVICE_URL=http://localhost:5001
ORDER_SERVICE_URL=http://localhost:5002
PAYMENT_SERVICE_URL=http://localhost:5003
SHIPMENT_SERVICE_URL=http://localhost:5004
NOTIFICATION_SERVICE_URL=http://localhost:5005
REPORTING_SERVICE_URL=http://localhost:5006
EXTERNAL_INTEGRATIONS_URL=http://localhost:5007

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-long-jwt-secret-key-here-make-it-very-secure
JWT_EXPIRES_IN=24h

# Encryption
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (can use free tiers: Supabase, Railway, Render)
DATABASE_URL=postgresql://username:password@localhost:5432/dental_store
DB_POOL_MAX=20
DB_POOL_MIN=5

# Redis (optional - can use free tiers: Upstash, Railway)
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=development

# Ports
PORT=5000
FRONTEND_PORT=3000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SUDAN-SPECIFIC CONFIGURATION
# =============================================================================

# Currency
DEFAULT_CURRENCY=USD
SECONDARY_CURRENCY=SDG
EXCHANGE_RATE_USD_TO_SDG=600

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# Business Information
BUSINESS_NAME=Dental Store Sudan
BUSINESS_ADDRESS=Khartoum, Sudan
BUSINESS_PHONE=+249 123 456 789
BUSINESS_EMAIL=info@dentalstore.sd
BUSINESS_WEBSITE=www.dentalstore.sd

# =============================================================================
# MONITORING & LOGGING (FREE ALTERNATIVES)
# =============================================================================

# Winston Logging (FREE - open source)
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Mock Services (for development)
MOCK_PAYMENT_SERVICE=false
MOCK_SHIPPING_SERVICE=false
MOCK_EXTERNAL_APIS=false

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/dental_store_test
TEST_MODE=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Node Cache (FREE - in-memory caching)
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_PROFILE=600
CACHE_TTL_PRODUCT_LIST=300
CACHE_TTL_ANALYTICS=1800

# Compression
ENABLE_COMPRESSION=true
COMPRESSION_THRESHOLD=1024

# =============================================================================
# FREE SERVICE LIMITS & QUOTAS
# =============================================================================

# Gmail SMTP Limits
GMAIL_DAILY_LIMIT=500
GMAIL_RATE_LIMIT_PER_MINUTE=10

# Twilio Trial Limits
TWILIO_TRIAL_CREDIT=15.00
TWILIO_VERIFIED_NUMBERS_ONLY=true

# Google Drive Limits
GOOGLE_DRIVE_STORAGE_LIMIT=15000000000
GOOGLE_DRIVE_API_REQUESTS_PER_DAY=1000000000

# Supabase Limits (Free Tier)
SUPABASE_STORAGE_LIMIT=1000000000
SUPABASE_BANDWIDTH_LIMIT=2000000000
SUPABASE_DB_SIZE_LIMIT=500000000

# =============================================================================
# BACKUP & RECOVERY (FREE ALTERNATIVES)
# =============================================================================

# Database Backup to Google Drive
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=google_drive

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker
DOCKER_REGISTRY=
DOCKER_TAG=latest

# Health Checks
HEALTHCHECK_TIMEOUT=30s
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_RETRIES=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_WHATSAPP_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_PDF_GENERATION=true
FEATURE_GOOGLE_DRIVE_BACKUP=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_REAL_TIME_UPDATES=true

